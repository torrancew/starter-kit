     dependencies.map do |dep|
       dependency = dep.map do |part|
         part = part.gsub(/^/, %q{'})
         part.gsub(/$/, %q{'})
       end.join(', ').chomp(', ') %>dependency <%= dependency %>
<%   end
   end %>

